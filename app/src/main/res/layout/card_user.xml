<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D7D7D7">

        <TextView
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/toWall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="see wall"
            app:layout_constraintEnd_toStartOf="@+id/toEvents"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userInfo" />

        <Button
            android:id="@+id/toEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="see events"
            app:layout_constraintEnd_toStartOf="@+id/toJobs"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/toWall"
            app:layout_constraintTop_toTopOf="@+id/toWall" />

        <Button
            android:id="@+id/toJobs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="see jobs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/toEvents"
            app:layout_constraintTop_toTopOf="@+id/toWall" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
